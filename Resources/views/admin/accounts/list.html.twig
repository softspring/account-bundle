{% trans_default_domain 'sfs_account' %}
{% extends '@SfsUser/admin_layout.html.twig' %}

{% block content %}
    <table class="table">
        <thead>
        <tr>
            <th scope="col">{{ 'admin_accounts.list.fields.id.header'|trans }}</th>
            <th scope="col">{{ 'admin_accounts.list.fields.name.header'|trans }}</th>
            <th>&nbsp;</th>
        </tr>
        </thead>

        <tbody>
        {% for account in accounts %}
            <tr>
                <td>{{ account.id }}</td>
                <td>{{ account.name }}</td>
                <td>
                    <a href="{{ url('sfs_account_admin_accounts_details', {'account': account}) }}">{{ 'admin_accounts.list.actions.details.link'|trans }}</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock content %}